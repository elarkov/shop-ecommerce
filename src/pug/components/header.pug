mixin header()

  //--overlay
  .overlay(data-overlay)

  //--modal
  .modal(data-modal)  
    .modal-close-overlay(data-modal-overlay)
    .modal-content
      button.modal-close-btn(data-modal-close)
        ion-icon(name="close-outline")

      .newsletter-img
        img(src="img/newsletter.png", alt="" width="400" height="400")

      .newsletter 
        form(action="#")
          .newsletter-header 
            h3.newsletter-title Подпишитесь на обновления
            .newsletter-desc <b>Евгений</b>, подписывайся на новые товары и скидки
            input(type="email" name="email" class="email-field" placeholder="Email" required)
            button(class="btn-newsletter" type="submit") Подписаться 

  //-- notification toast
  //- .notification-toast(data-toast)
  //-   button.toast-close-btn(data-toast-close)
  //-     ion-icon(name="close-outline")
  //-   .toast-banner 
  //-     img(src="img/products/jewellery-1.jpg", alt="" width="80" height="70")
  //-   .toast-detail 
  //-     p.toast-message Только что купили
  //-     p.toast-title Серьги Rose Gold
  //-     p.toast-meta 
  //-       <time datetime="PT2M"> 2 минуты</time> назад
  //--HEADER
  header 
    .header-top 
      .container 
        ul.header-social-container 
          li 
            a.social-link(href="")
              ion-icon(name="logo-facebook")
          li 
            a.social-link(href="")
              ion-icon(name="logo-twitter")
          li 
            a.social-link(href="")
              ion-icon(name="logo-instagram") 
        .header-alert-news 
          p <b>Бесплатная доставка</b> 
        .header-top-actions
          select(name="currency")
            option(value="rub") Рубль &rub; 
    .header-main
      .container 
        a.header-logo(href="")
          img(src="img/logo/logo.svg", alt="" width="120" height="36")
        .header-search-container 
          input(type="search" name="search" class="search-field" placeholder="Название продуката") 
          button.search-btn
            ion-icon(name="search-outline")
        .header-user-actions 
          button.action-btn
            ion-icon(name="person-outline")
          button.action-btn
            ion-icon(name="heart-outline")
            span.count 0
          button.action-btn
            ion-icon(name="bag-handle-outline")
            span.count 0
    nav.desktop-navigation-menu 
      .container 
        ul.desktop-menu-category-list 
          li.menu-category 
            a.menu-title(href="") Главная
          li.menu-category 
            a.menu-title(href="") Категории
            .dropdown-panel
              ul.dropdown-panel-list 
                li.menu-title 
                  a(href="") Мужчинам
                li.panel-list-item 
                  a(href="") Брюки
                li.panel-list-item 
                  a(href="") Верхняя одежда
                li.panel-list-item 
                  a(href="") Джинсы
                li.panel-list-item 
                  a(href="") Костюмы
                li.panel-list-item 
                  a(href="") 
                    img(src="img/electronics-banner-1.jpg", alt="" width="250" height="119")
              ul.dropdown-panel-list 
                li.menu-title 
